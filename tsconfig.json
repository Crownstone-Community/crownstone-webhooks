{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compilerOptions": {
    "esModuleInterop"   : true,
    "outDir"            : "dist",
    "resolveJsonModule" : true,
    "declaration"       : true,
    "strictNullChecks" : false
  },
  "include": [
    "src/**/*",
    "node_modules/crownstone-core/src/declarations/declarations.d.ts",
    "node_modules/crownstone-cloud/src/declarations/**/*",
    "src/declarations/declarations.d.ts",
    "src/sockets/declarations/declarations.d.ts"
  ]
}